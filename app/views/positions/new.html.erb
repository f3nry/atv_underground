<%= form_for @position, :url => (@action == "update") ? position_path(@position) : "/aircrafts/#{@aircraft.id}/positions" do |f| %>
  <fieldset>
    <legend>New Position</legend>
    <div class="control-group">
      <%= f.label :name, "Name", :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :name, :class => "input-xlarge" %>
        <p class="help-block">Name of position (Front seat, back seat, middle seat, etc)</p>
      </div>
    </div>

    <div class="actions">
      <%= f.submit :class => "btn btn-success" %>
      <%= link_to "Cancel", aircraft_path(@aircraft), :class => "btn" %>
    </div>
  </fieldset>
<% end %>
