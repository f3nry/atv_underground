<%= form_for(@cg_entry, :url => (@action == "update") ? position_path(@position) : "/aircrafts/#{@aircraft.id}/cg_entries") do |f| %>
  <% if @cg_entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@cg_entry.errors.count, "error") %> prohibited this CG Entry from being saved:</h2>

      <ul>
      <% @cg_entry.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :weight, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :weight, :class => "input-xlarge" %>
      <p class="help-block">Weight of the aircraft</p>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :arm, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :arm, :class => "input-xlarge" %>
      <p class="help-block">Arm of the aircraft</p>
    </div>
  </div>

  <div class="actions">
    <%= f.submit :class => "btn btn-primary" %>
    <%= link_to "Cancel", aircraft_path(@aircraft), :class => "btn" %>
  </div>
<% end %>
